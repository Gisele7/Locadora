@model Locadora.Logins

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Cadastrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoginUsuario" class="control-label"></label>
                @*<input type="text" name="LoginUsuario" />*@
                <input asp-for="LoginUsuario" class="form-control" />
                <span asp-validation-for="LoginUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="senhaUsuario" class="control-label"></label>
                @*<input type="password" name="SenhaUsuario" />*@
                <input asp-for="senhaUsuario" class="form-control" />
                <span asp-validation-for="senhaUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cadastrar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
